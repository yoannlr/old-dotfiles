#!/bin/sh

# If there are no batteries, do nothing
[ ! "$(ls -A /sys/class/power_supply)" ] && exit

# From Lukesmith's dotfiles: https://github.com/lukesmithxyz/voidrice
# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity) || break
	status=$(sed "s/[Dd]ischarging/ğŸ”‹/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ğŸ”Œ/;s/[Uu]nknown/â™»ï¸/;s/[Ff]ull/âš¡/" "$battery"/status)

	[ -e /tmp/batnotif ] && [ ! "$status" = "ğŸ”‹" ] && rm /tmp/batnotif

	# If it is discharging and 25% or less, we will add a â— as a warning.
	if [ "$capacity" -le 25 ] && [ "$status" = "ğŸ”‹" ]
	then
		status="â—"
		if [ ! -e /tmp/batnotif ]
		then
			touch /tmp/batnotif
			notify-send -u critical "â— Low battery ($battery)"
			mpv $SCRIPTS/lowbattery.m4a &
		fi
	fi

	echo "$status ${capacity}%"
done | sed 's/ *$//'
