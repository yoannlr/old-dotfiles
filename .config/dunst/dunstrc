[global]
	geometry = "260x5-20+40"
	follow = mouse
	font = Monospace 10
	padding = 8
	horizontal_padding = 8
	separator_height = 8
	separator_color = auto

	ignore_newline = no
	word_wrap = yes
	show_indicators = no

	markup = full
	format = "<b>%a</b>\n%s"

	icon_position = left
	min_icon_size = 22
	max_icon_size = 22
	icon_path = "$HOME/.local/share/icons/Vimix-dark/:/usr/share/icons/default/"

	history_length = 50
	dmenu = /usr/bin/dmenu
	browser = $BROWSER

	class = Dunst
	title = Dunst

	transparency = 10
	idle_treshold = 120

	mouse_left_click = do_action, close_current
	mouse_right_click = close_current
	mouse_middle_click = close_all

[shortcuts]
	close = ctrl+space
	close_all = ctrl+shift+space
	history = ctrl+shift+h
	context = ctrl+shift+c

[urgency_low]
	background = "#282828"
	foreground = "#eeeeee"
	timeout = 5

[urgency_normal]
	background = "#000000"
	foreground = "#eeeeee"
	timeout = 5

[urgency_critical]
	background = "#cc2421"
	foreground = "#eeeeee"
	timeout = 0
