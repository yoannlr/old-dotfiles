# restore wallpaper when i3 starts
exec --no-startup-id feh --bg-fill $(du -a $HOME/Pictures/Backgrounds/ | sort -R | head -1 | awk '{print $2}')

# start dunst (notifications)
exec --no-startup-id dunst

# super key as mod key
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# program variables
set $term exec --no-startup-id st -f 'Liberation Mono:pixelsize=18'
set $brightnesscontrol exec --no-startup-id xrandr --output eDP-1 --brightness
set $primaryaction exec --no-startup-id $SCRIPTSDIR/primaryaction.sh
set $shutdownoptions exec --no-startup-id $SCRIPTSDIR/shutdownoptions.sh
set $lock exec --no-startup-id $SCRIPTSDIR/lock.sh
set $screenshot exec --no-startup-id scrot $HOME/latest-screenshot.png
set $mounthelper exec --no-startup-id $SCRIPTSDIR/mountdrives.sh
set $umounthelper exec --no-startup-id $SCRIPTSDIR/umountdrives.sh
set $musiccontrol exec --no-startup-id $SCRIPTSDIR/musiccontrol.sh
set $pipette exec --no-startup-id $SCRIPTSDIR/pipette.sh

font pango:monospace 8

# windows properties

default_border none
default_floating_border normal

#for_window [class="^.*"] border pixel 0
for_window [class="st-256color"] border pixel 20
for_window [window_role="GtkFileChooserDialog"] resize set 800 600, move position center
for_window [class="pavucontrol"] floating enable
for_window [class="Minecraft*"] move workspace $ws6

for_window [title="GIMP Startup"] move workspace $ws10
for_window [class="Gimp"] move workspace $ws10, workspace $ws10, gaps inner current set 0
for_window [class="Blender"] move workspace $ws9, workspace $ws9, gaps inner current set 0
for_window [class="love"] floating enable
for_window [title="Discord Updater"] border pixel 0

# rofi
bindsym $mod+space exec rofi -show drun -theme $HOME/.config/rofi/theme.rasi -location 2 -yoffset 30

# programs bindings
bindsym $mod+Return $term
bindsym $mod+Shift+w exec --no-startup-id $BROWSER
bindsym $mod+Shift+b exec --no-startup-id feh --bg-fill $(du -a $HOME/Pictures/Backgrounds/ | sort -R | head -1 | awk '{print $2}')
bindsym $mod+Shift+f exec --no-startup-id $FILEBROWSER
bindsym $mod+Shift+i $term -e htop
bindsym $mod+F2 $screenshot 
bindsym $mod+F1 $lock 
bindsym $mod+F11 $brightnesscontrol 0.5
bindsym $mod+F12 $brightnesscontrol 1
bindsym $mod+Shift+n $term -e nmtui
bindsym $mod+Shift+x $shutdownoptions
bindsym $mod+Shift+s $term -e alsamixer
bindsym $mod+Shift+a $primaryaction
bindsym $mod+Shift+m $mounthelper
bindsym $mod+Shift+u $umounthelper
bindsym $mod+Shift+F11 exec --no-startup-id redshift -O 2500 -b 0.7
bindsym $mod+Shift+F12 exec --no-startup-id redshift -x
bindsym $mod+p $pipette
bindsym $mod+Shift+p $pipette rgb

bindsym XF86AudioPlay $musiccontrol t
bindsym XF86AudioNext $musiccontrol n
bindsym XF86AudioPrev $musiccontrol p

bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# gaps binding
# bindsym $mod+g gaps inner current plus 5
# bindsym $mod+Shift+g gaps inner current minus 5
# bindsym $mod+Control+g gaps inner current set 10

# workspaces definition
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

#
#	DEFAULT BINDINGS
#

# kill focused window
bindsym $mod+Shift+q kill

# change focused window
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# bar
bar {
        status_command i3blocks
	position top
}

# colors
client.focused	#000000	#000000	#ffffff	#000000	#000000
client.focused_inactive	#000000	#000000	#ffffff	#000000	#000000
client.unfocused	#000000	#000000	#ffffff	#000000	#000000
client.urgent	#000000	#000000	#ffffff	#000000	#000000
client.placeholder	#000000	#000000	#ffffff	#000000	#000000
client.background	#000000

