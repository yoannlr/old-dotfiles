# programs
set $term alacritty
set $termexec alacritty -e
set $webbrowser flatpak run org.mozilla.firefox

set $mod Mod4

# xdg autostart (.desktop files) with dex
exec --no-startup-id dex --autostart --environment i3

# slock for automatic screen lock
exec --no-startup-id xss-lock --transfer-sleep-lock -- slock --nofork
bindsym $mod+l exec slock

# network applet
exec --no-startup-id nm-applet

# compositor (transparency)
exec --no-startup-id xcompmgr

# enable numlock
exec --no-startup-id numlockx

# notifications
exec --no-startup-id dunst

# volume and music
set $refresh_i3status pkill -u $(whoami) -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioPrev exec --no-startup-id mpc prev
bindsym XF86AudioNext exec --no-startup-id mpc next

# program shortcuts
bindsym $mod+Return exec $term
bindsym $mod+space exec "rofi -modi drun,run -show drun"
bindsym $mod+w exec $webbrowser
bindsym $mod+m exec $termexec ncmpcpp
bindsym $mod+Shift+a exec arandr
bindsym $mod+Shift+p exec password_menu
bindsym $mod+x exec $termexec lf
bindsym $mod+Shift+n exec $termexec newsboat

# screenshot (automatically copied to clipboard)
bindsym --release Print exec --no-startup-id scrot ~/screenshot.png -e 'xclip -selection clipboard -target image/png -i $f'
bindsym --release Shift+Print exec --no-startup-id scrot --select ~/screenshot.png -e 'xclip -selection clipboard -target image/png -i $f'
# --release = stop grabbing the keyboard before calling the program (useful for xdotool type for example)

#
# window manager
#

# window rules
for_window [class="Arandr"] floating enable, resize set 600 400, move position center

# appearance
default_border pixel 2
default_floating_border pixel 2
title_align center
font pango:monospace 10
hide_edge_borders smart
#gaps inner 5px
#gaps outer 5px

# moving/resizing windows
floating_modifier $mod
tiling_drag modifier titlebar

# kill focused window
bindsym $mod+q kill

# focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+ampersand workspace number $ws1
bindsym $mod+eacute workspace number $ws2
bindsym $mod+quotedbl workspace number $ws3
bindsym $mod+apostrophe workspace number $ws4
bindsym $mod+parenleft workspace number $ws5
bindsym $mod+minus workspace number $ws6
bindsym $mod+egrave workspace number $ws7
bindsym $mod+underscore workspace number $ws8
bindsym $mod+ccedilla workspace number $ws9
bindsym $mod+agrave workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+eacute move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+egrave move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+ccedilla move container to workspace number $ws9
bindsym $mod+Shift+agrave move container to workspace number $ws10

# move workspace to output
bindsym $mod+Shift+Left move workspace to output left
bindsym $mod+Shift+Down move workspace to output down
bindsym $mod+Shift+Up move workspace to output up
bindsym $mod+Shift+Right move workspace to output right

# move window to output
bindsym $mod+Control+Left move container to output left
bindsym $mod+Control+Down move container to output down
bindsym $mod+Control+Up move container to output up
bindsym $mod+Control+Right move container to output right

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec i3-msg exit

# resize
bindsym $mod+Mod1+Left resize shrink width 20 px
bindsym $mod+Mod1+Down resize grow height 20 px
bindsym $mod+Mod1+Up resize shrink height 20 px
bindsym $mod+Mod1+Right resize grow width 20 px

bar {
    position top
    tray_output primary
    status_command i3blocks
}

bindsym $mod+n bar mode toggle
