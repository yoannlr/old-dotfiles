alias \
	vi='vim' \
	ls='ls --color=auto' \
	grep='grep --color=auto' \
	bm="source bookmarks" \
	news='newsboat' \
	mpv='mpv --no-resume-playback' \
	youtube-dl='youtube-dl --restrict-filenames' \
	clocr='rm -v $XDG_CACHE_HOME/ocr/ocr-*.txt' \
	dls='tail -f $(ls .cache/ytdl_* | tail -1)' \
	sway='sway --unsupported-gpu' \
