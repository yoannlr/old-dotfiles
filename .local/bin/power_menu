#!/bin/sh
action=$(echo -e 'Cancel\nQuit X\nPower off\nReboot\nSuspend\nUpdate and power off' | dmenu -i -p 'Power options')

[ -z "$action" ] && exit 0

case $action in
	'Power off')
		systemctl poweroff
	;;
	'Reboot')
		systemctl reboot
	;;
	'Suspend')
		systemctl 'suspend'
	;;
	'Quit X')
		killall -u "$USER" --signal SIGTERM Xorg
	;;
	'Update and power off')
		$TERMINAL -e 'sudo pacman -Syu'
		systemctl poweroff
	;;
	*)
		exit 0
esac
