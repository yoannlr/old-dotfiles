#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid -f $TERMINAL -e 'nmtui' ;;
	3) setsid -f gnome-system-monitor -r ;;
esac

state="$(sed "s/down/â/;s/up/ğŸŒ/" /sys/class/net/e*/operstate 2>/dev/null)"
[ "$state" = "â" ] && state="$(sed "s/down/â/;s/up/ğŸŒ/" /sys/class/net/w*/operstate 2>/dev/null)"
[ "$state" = "ğŸŒ" ] && state="$state $(hostname -i)"
echo $state
