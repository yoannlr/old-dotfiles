#!/bin/sh

# mouse buttons
# 1 - left
# 2 - middle
# 3 - right
# 4 - scroll up
# 5 - scroll down
# 6 - push scroll left
# 7 - push scroll right
# 8 - back
# 9 - forward

case $BLOCK_BUTTON in
	1) focus_or_launch ymuse.Ymuse ymuse ;;
	3) mpc toggle ;;
	4) mpc volume +5 ;;
	5) mpc volume -5 ;;
	8) mpc prev ;;
	9) mpc next ;;
esac

pgrep audacious > /dev/null || exit

song=$(mpc -f '%artist% - %title%' | head -1 | tr -d '&')
[ ! "$(mpc status '%state%')" = "playing" ] && song="<i>$song</i>"
echo "$song ðŸŽ¸"
